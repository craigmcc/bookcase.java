<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Project Configuration -->

    <parent>
        <groupId>org.craigmcc.projects</groupId>
        <artifactId>projects-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <groupId>org.craigmcc.bookcase</groupId>
    <artifactId>bookcase</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Bookcase Application</name>
    <description>
        Parent POM for Bookcase application.
    </description>

    <!-- Build Configuration -->
    <build>
        <finalName>bookcase-parent</finalName>
    </build>

    <!-- Modules -->
    <modules>
        <module>bookcase-client</module>
        <module>bookcase-model</module>
        <module>bookcase-service</module>
        <module>bookcase-endpoint</module>
        <module>bookcase-shared</module>
        <module>bookcase-web</module>
    </modules>

    <!-- Properties -->
    <properties>

        <!-- Maven Configuration -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- Version Dependencies -->
        <bookcase-client.version>1.0.0-SNAPSHOT</bookcase-client.version>
        <bookcase-endpoint.version>1.0.0-SNAPSHOT</bookcase-endpoint.version>
        <bookcase-model.version>1.0.0-SNAPSHOT</bookcase-model.version>
        <bookcase-service.version>1.0.0-SNAPSHOT</bookcase-service.version>
        <bookcase-shared.version>1.0.0-SNAPSHOT</bookcase-shared.version>
        <bookcase-web.version>1.0.0-SNAPSHOT</bookcase-web.version>
